ns2:BokehQuality a ns2:PhotographyPattern ;
    rdfs:label "Bokeh Quality (Out-of-Focus Rendering)" ;
    rdfs:comment "Aesthetic quality of out-of-focus areas (blur). Affected by aperture shape (blade count), lens design, aperture size. Subjective but recognizable." ;
    ns1:M2_basis "m2:Code (I⊗S) - Encoding of blur pattern",
        "m2:Emergence (I⊗S⊗D) - Aesthetic quality emerges from optical structure",
        "m2:Structure (S) - Aperture blade geometry" ;
    ns2:aestheticQualities [ ] ;
    ns2:culturalContext "Japanese aesthetic term ('ボケ' = blur); highly valued in portrait/macro" ;
    ns2:factors "Aperture blade count: More blades → rounder bokeh (5-9 typical)",
        "Aperture size: Wider (lower f-number) → more bokeh",
        "Distance relationships: Background distance affects blur strength",
        "Lens aberrations: Spherical aberration affects bokeh character" ;
    ns2:principle "Out-of-focus point sources rendered as aperture shape" ;
    ns2:validatedPoclets 0 .

ns2:CompensatoryTriplet a ns2:PhotographyPattern ;
    rdfs:label "Compensatory Triplet (Exposure Control)" ;
    rdfs:comment "Pattern where three parameters (ISO, Aperture, Shutter Speed) must balance to achieve correct exposure. Adjusting one requires compensating with others. Multiplicative relationship: Exposure ∝ ISO × Area × Time." ;
    ns1:M2_basis "m2:Balance (A⊗S⊗F, Territory) - Equilibrium state of light capture",
        "m2:Component (S⊗I) - ISO, Aperture, Shutter as distinct elements",
        "m2:Constraint (S⊗I) - Physical/technical limits on each parameter",
        "m2:Trade-off (R⊗V⊗E / A⊗I, Map) - Deliberate exchange between parameters" ;
    ns2:compensationRules [ ] ;
    ns2:components [ ],
        [ ],
        [ ] ;
    ns2:examples [ ] ;
    ns2:formula "Exposure = ISO × (π(D/2)²) × t where D=aperture diameter, t=shutter time" ;
    ns2:logFormula "log₂(Exposure) = log₂(ISO) + log₂(1/N²) + log₂(t) [in stops]" ;
    ns2:principle "Balanced exposure achieved through compensatory parameter adjustment" ;
    ns2:transdisciplinaryAnalogy "Fire Triangle (Fuel ⊗ O₂ ⊗ Heat → Fire)" ;
    ns2:validatedPoclets 1 .

ns2:CreativeExposureModes a ns2:PhotographyPattern ;
    rdfs:label "Creative Exposure Modes (PASM)" ;
    rdfs:comment "Camera operating modes giving photographer control over exposure parameters. P (Program), A/Av (Aperture Priority), S/Tv (Shutter Priority), M (Manual)." ;
    ns1:M2_basis "m2:Agency (I⊗D) - Distribution of control (human vs camera)",
        "m2:Mode (S⊗I⊗A) - Discrete operational states",
        "m2:Switch (A⊗D⊗I) - Transition between modes" ;
    ns2:autoISOInteraction "Modern cameras: Auto-ISO works in A, S, M modes (acts as 'safety net')" ;
    ns2:modes [ ],
        [ ],
        [ ],
        [ ] ;
    ns2:principle "Graduated control from full-auto to full-manual" ;
    ns2:validatedPoclets 1 .

ns2:DepthOfFieldControl a ns2:PhotographyPattern ;
    rdfs:label "Depth of Field Control" ;
    rdfs:comment "Range of distances appearing acceptably sharp in image. Controlled primarily by aperture, with secondary effects from focal length and subject distance." ;
    ns1:M2_basis "m2:Constraint (S⊗I) - Optical physics limits",
        "m2:Mode (S⊗I⊗A) - Shallow vs Deep DoF modes",
        "m2:Trade-off (R⊗V⊗E / A⊗I) - Light gathering vs DoF" ;
    ns2:formula "DoF ≈ 2 × u² × N × c / f² where u=subject distance, N=f-number, c=circle of confusion, f=focal length" ;
    ns2:modes [ ] ;
    ns2:primaryControl "Aperture (f-number)" ;
    ns2:principle "Aperture size inversely affects depth of field" ;
    ns2:relationships [ ] ;
    ns2:tradeoff "Light gathering (wide aperture) ↔ Depth of field (narrow aperture)" ;
    ns2:validatedPoclets 1 .

ns2:DynamicRangeCapture a ns2:PhotographyPattern ;
    rdfs:label "Dynamic Range Capture" ;
    rdfs:comment "Camera/sensor ability to capture detail in both shadows and highlights simultaneously. Limited by sensor technology. Extended via HDR (High Dynamic Range) techniques." ;
    ns1:M2_basis "m2:Capacity (S⊗I) - Range of recordable luminance",
        "m2:Composition (S⊗I⊗A) - HDR merging multiple exposures",
        "m2:Constraint (S⊗I) - Physical sensor limits" ;
    ns2:limitation "Scene luminance range often exceeds sensor capability → Trade-off required" ;
    ns2:measurement "Stops of dynamic range (e.g., 12 stops = 2^12 = 4096:1 ratio)" ;
    ns2:principle "Sensor can capture finite range of luminance values" ;
    ns2:techniques [ ] ;
    ns2:typicalRanges [ ] ;
    ns2:validatedPoclets 0 .

ns2:ExposureCompensation a ns2:PhotographyPattern ;
    rdfs:label "Exposure Compensation" ;
    rdfs:comment "Deliberate override of camera's automatic exposure metering. Allows photographer to bias exposure lighter (+EV) or darker (-EV) by specified stops." ;
    ns1:M2_basis "m2:Adaptation (I⊗F⊗D) - Compensating for metering errors",
        "m2:Agent (I⊗D) - Photographer as active controller",
        "m2:Regulation (A⊗S⊗F) - Feedback control of exposure" ;
    ns2:commonUseCases "Backlit subjects: +1 to +1.5 EV (expose for subject not background)",
        "High-key portraits: +1 to +2 EV (bright, airy look)",
        "Low-key portraits: -1 to -2 EV (dark, moody look)",
        "Silhouettes: -2 to -3 EV (intentional underexposure)",
        "Snow scenes: +1 to +2 EV (prevent underexposure of bright scene)" ;
    ns2:mechanism "Camera adjusts one/more parameters (ISO/Aperture/Shutter) to shift exposure" ;
    ns2:meteringModes [ ] ;
    ns2:principle "Manual override of automatic exposure calculation" ;
    ns2:range "Typically ±3 to ±5 stops (±3 EV to ±5 EV)" ;
    ns2:units "EV (Exposure Value) or stops" ;
    ns2:validatedPoclets 0 .

ns2:ExposureLatitude a ns2:PhotographyPattern ;
    rdfs:label "Exposure Latitude (Forgiveness)" ;
    rdfs:comment "Tolerance of capture medium to exposure errors. High latitude (film negative) → forgiving; low latitude (slide film, digital highlights) → unforgiving." ;
    ns1:M2_basis "m2:Constraint (S⊗I) - Medium's tolerance range",
        "m2:Robustness (proposed) - Resilience to parameter variation" ;
    ns2:bestPractice "Expose to the right (ETTR) for digital - maximize signal, avoid highlight clipping" ;
    ns2:mediaComparison [ ] ;
    ns2:principle "Different media have different tolerance to exposure errors" ;
    ns2:validatedPoclets 0 .

ns2:LogarithmicScaling a ns2:PhotographyPattern ;
    rdfs:label "Logarithmic Scaling (Stop System)" ;
    rdfs:comment "Photographic parameters scaled logarithmically base-2. Each 'stop' represents doubling/halving of light. Aligns with Weber-Fechner law of perception." ;
    ns1:M2_basis "m2:Code (I⊗S) - Stop encoding system",
        "m2:Scale (proposed) - Magnitude representation",
        "m2:Transform (D⊗S⊗I) - Linear → Log transformation" ;
    ns2:advantage "Uniform additive arithmetic: ΔStops_total = ΔStops_ISO + ΔStops_Aperture + ΔStops_Shutter" ;
    ns2:examples "1/1000s → 1/500s → 1/250s → 1/125s: +1 stop each",
        "ISO 100 → 200 → 400 → 800 → 1600: +1 stop each",
        "f/1.4 → f/2 → f/2.8 → f/4 → f/5.6: -1 stop each (N increases by √2)" ;
    ns2:formula "Stops = log₂(Value / Reference)" ;
    ns2:perceptualBasis "Weber-Fechner law: Perceived intensity ∝ log(Physical intensity)" ;
    ns2:principle "Perceptual uniformity through logarithmic encoding" ;
    ns2:stopDefinitions [ ] ;
    ns2:validatedPoclets 1 .

ns2:MotionBlurControl a ns2:PhotographyPattern ;
    rdfs:label "Motion Blur Control" ;
    rdfs:comment "Degree of blur from subject/camera motion during exposure. Controlled by shutter speed. Can be aesthetic choice (motion blur) or technical requirement (freeze motion)." ;
    ns1:M2_basis "m2:Dynamics (D) - Temporal motion capture",
        "m2:Mode (S⊗I⊗A) - Freeze vs Blur modes",
        "m2:Trade-off (R⊗V⊗E / A⊗I) - Light time vs Motion freeze" ;
    ns2:formula "Blur_distance = Velocity × Shutter_time" ;
    ns2:handheldRule "Minimum shutter ≈ 1/focal_length (e.g., 50mm lens → 1/60s minimum)" ;
    ns2:modes [ ] ;
    ns2:primaryControl "Shutter Speed (exposure duration)" ;
    ns2:principle "Shutter speed determines motion capture" ;
    ns2:relationship "↓Shutter time → ↓Motion blur (freeze motion)" ;
    ns2:tradeoff "Light accumulation (slow shutter) ↔ Motion freeze (fast shutter)" ;
    ns2:validatedPoclets 1 .

ns2:NoiseGrainControl a ns2:PhotographyPattern ;
    rdfs:label "Noise/Grain Control (ISO)" ;
    rdfs:comment "Image degradation from sensor amplification (digital noise) or film grain. Controlled by ISO sensitivity. Trade-off between low-light capability and image quality." ;
    ns1:M2_basis "m2:Constraint (S⊗I) - Signal-to-noise ratio limits",
        "m2:Emergence (I⊗S⊗D) - Noise emerges from amplification",
        "m2:Trade-off (R⊗V⊗E / A⊗I) - Sensitivity vs Quality" ;
    ns2:mitigationStrategies "Expose to the right (ETTR) - maximize signal",
        "In-camera noise reduction (may soften details)",
        "Post-processing noise reduction (Lightroom, DxO)",
        "Sensor technology improvements (larger pixels, better amplifiers)" ;
    ns2:modes [ ] ;
    ns2:physicalBasis [ ] ;
    ns2:principle "ISO sensitivity inversely affects image quality" ;
    ns2:relationship "↑ISO → ↑Brightness but ↑Noise/Grain (degraded quality)" ;
    ns2:tradeoff "Low-light capability (high ISO) ↔ Image quality (low ISO)" ;
    ns2:validatedPoclets 1 .

